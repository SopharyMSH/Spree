<%= render 'spree/admin/shared/product_tabs', current: Spree.t(:sale_pricing) %>
<%= render 'spree/shared/error_messages', target: @variant %>

<% content_for :page_actions do %>
 <span id="new_add_sale_price" data-hook>
   <%= button_link_to Spree.t(:add_sale_price), 'javascript:;', {
     icon: 'add', :'data-target' => 'tbody#sale_prices', class: 'btn-success spree_add_fields', id: 'add_sale_price'} %>
 </span>
<% end %>

<%= form_for(@variant, url: admin_product_variant_path(@product, @variant), html: { method: :put }) do |f| %>
 <h3><%= Spree.t(:sale_prices) %></h3>
 <table class="table">
   <thead>
     <tr>
       <th><%= Spree.t(:display) %></th>
       <th><%= Spree.t(:amount) %></th>
       <th><%= Spree.t(:position) %></th>
       <th><%= Spree.t(:role) %></th>
       <th class="actions"></th>
     </tr>
   </thead>
   <tbody id="sale_prices">
     <%= f.fields_for :sale_prices do |vp_form| %>
     <%= render partial: 'spree/admin/sale_prices/sale_price_fields', locals: { f: vp_form } %>
     <% end %>
   </tbody>

 </table>
 <%= render 'spree/admin/shared/edit_resource_links' %>
<% end %>